/*功能区*/
.func-area {
	display: flex;
 
	flex-direction: row;
	margin: 20rpx 0;
	padding-top: 30rpx;
	background: white;
}

.func-area view {
	width: 50%;
	text-align: center;
}

.func-area text{
	display: block;
	color: #333;
	font-size: 36rpx;
	line-height: 90rpx;
}

.func-area image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 20rpx;
}

.orange {
	background: #f60;
}

.blue {
	background: #09f;
}

/*主商品区*/
.container-goods {
	background: white;
}

.container-goods .caption {
	font-size: 32rpx;
	width: 100%;
	line-height: 60rpx;
	text-indent: 20rpx;
	padding: 10rpx;
}

.main-goods {
	border-top: 1px solid #eee;
	background: white;
	display: inline-block;
}


